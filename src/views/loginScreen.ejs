    const passwordInput = document.querySelector('#password-input');
    console.log(passwordInput);
    
    teste = (e) => {
      console.log(1);
    }

    if(passwordInput.value) {
      console.log(1);
      passwordInput.nextElementSibling.classList.add('animate')
    }

  </script>
</body>

</html>